{
    "openapi": "3.0.3",
    "info": {
        "title": "CabaPro Árbitros API (Node Gateway)",
        "version": "1.0.0",
        "description": "API Node/Express que expone funcionalidades del rol Árbitro"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Local"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "summary": "Root info",
                "responses": {
                    "200": {
                        "description": "Server info"
                    }
                }
            }
        },
        "/health": {
            "get": {
                "summary": "Healthcheck",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/whoami": {
            "get": {
                "summary": "Identidad del contenedor/host",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/WhoAmI"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "summary": "Registro (proxy)",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RegisterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "summary": "Login (proxy)",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/api/arbitros": {
            "get": {
                "summary": "Listar árbitros",
                "responses": {
                    "200": {
                        "description": "Lista de árbitros",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ArbitroList"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/arbitros/{id}": {
            "get": {
                "summary": "Obtener árbitro",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Arbitro"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No encontrado"
                    }
                }
            }
        },
        "/api/arbitros/me": {
            "get": {
                "summary": "Perfil",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "put": {
                "summary": "Actualizar perfil",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ArbitroUpdateRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "WhoAmI": {
                "type": "object",
                "properties": {
                    "hostname": {
                        "type": "string"
                    },
                    "pid": {
                        "type": "integer"
                    },
                    "env": {
                        "type": "string"
                    }
                }
            },
            "RegisterRequest": {
                "type": "object",
                "properties": {
                    "correo": {
                        "type": "string"
                    },
                    "contrasena": {
                        "type": "string"
                    },
                    "nombre": {
                        "type": "string"
                    }
                },
                "required": [
                    "correo",
                    "contrasena",
                    "nombre"
                ]
            },
            "LoginRequest": {
                "type": "object",
                "properties": {
                    "correo": {
                        "type": "string"
                    },
                    "contrasena": {
                        "type": "string"
                    }
                },
                "required": [
                    "correo",
                    "contrasena"
                ]
            },
            "Arbitro": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "nombre": {
                        "type": "string"
                    },
                    "correo": {
                        "type": "string"
                    },
                    "especialidad": {
                        "type": "string"
                    },
                    "escalafon": {
                        "type": "string"
                    },
                    "fotoPerfilUrl": {
                        "type": "string"
                    }
                }
            },
            "ArbitroList": {
                "type": "object",
                "properties": {
                    "page": {
                        "type": "integer"
                    },
                    "size": {
                        "type": "integer"
                    },
                    "total": {
                        "type": "integer"
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Arbitro"
                        }
                    }
                }
            },
            "ArbitroUpdateRequest": {
                "type": "object",
                "properties": {
                    "nombre": {
                        "type": "string"
                    },
                    "especialidad": {
                        "type": "string"
                    },
                    "escalafon": {
                        "type": "string"
                    },
                    "fotoPerfilUrl": {
                        "type": "string"
                    }
                }
            }
        }
    }
}